        <link rel="stylesheet" href="/assets/extra-libs/ui-select/select.css">
        <%- contentFor('breadcrumb') %>
            <div class="page-breadcrumb">
                <div class="row">
                    <div class="col-7 align-self-center">
                        <h3 class="page-title text-truncate text-dark font-weight-medium mb-1">Brands</h3>
                        <div class="d-flex align-items-center">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb m-0 p-0">
                                    <li class="breadcrumb-item"><a href="/brands">Brands</a>
                                    </li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>

            <%- contentFor('body') %>
                <div class="container-fluid" ng-app="brandsApp" ng-controller="brandsAppCtrlr" ng-init="init()">
                    <div class="row">
                        <div class="col-12">
                            <button class="btn btn-success float-right" ng-click="onOpenModalCick('add')"><i
                                    class="fa fa-plus"></i> Create brand</button>
                        </div>

                        <div class="col-12 my-4">
                            <div class="table-responsive">
                                <table
                                    class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline"
                                    style="border-collapse: collapse; border-spacing: 0; width: 100%" datatable="ng"
                                    dt-options="dtOptions">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Name</th>
                                            <th>Description</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="brand in brands track by $index" ng-hide="isLoading">
                                            <td>{{ $index + 1 }}</td>
                                            <td>{{ brand.name }}</td>
                                            <td>
                                                {{ brand.description ? brand.description : "--" }}
                                            </td>
                                            <td>
                                                <button class="btn btn-warning"
                                                    ng-click="onOpenModalCick('edit', brand, $index)">
                                                    <i class="fa fa-edit text-white"></i></button>
                                                <button class="btn btn-danger" ng-click="delete($index, brand.id)">
                                                    <i class="fa fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    </tbody>
                                    <tr class="text-center" ng-if="isLoading">
                                        <td colspan="6">
                                            <i class="bx bx-loader bx-spin align-middle font-size-18 mr-1"></i>Loading
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                    <%- include('./brandFormModal')%>
                </div>



