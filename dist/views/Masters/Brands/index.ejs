            type="text/css">
        <link rel="stylesheet" href="/assets/extra-libs/angular-datatables/css/buttons.dataTables.min.css">
        <link rel='stylesheet' href='/assets/extra-libs/angular-datatables/css/fixedColumns.dataTables.bootstrap4.css'>

        <!-- UI-Select Styles -->
